<div>
  <h1>My Tasks</h1>
  <ul>
    <% @tasks.each do |task| %>
      <input type="checkbox" name="#{task}">
      <label for="#{task}"><%= link_to task.title, task_path(task) %></label>
    <% end %>
  </ul>

  <p><%= link_to "Create new", tasks_new_path() %></p>

  <%= link_to "Remove",
              task_path(@tasks),
              method: :delete,
              data: {confirm: "Are you sure?" } %>

</div>
